# ========================================
# ENVIRONMENT (staging ou production)
# ========================================
ENVIRONMENT=staging

# ========================================
# TRIMBLE OAUTH CREDENTIALS - STAGING
# Obtenir sur : https://developer.trimble.com/
# Section "My Apps" > Create Application
# ========================================

TRIMBLE_CLIENT_ID=your_staging_client_id_here
TRIMBLE_CLIENT_SECRET=your_staging_client_secret_here
TRIMBLE_REDIRECT_URI=http://localhost:3000/auth/callback

# ========================================
# APPLICATION SETTINGS
# ========================================

PORT=3000
NODE_ENV=development
FRONTEND_URL=https://simontrim.github.io

